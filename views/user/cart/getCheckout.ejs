                    </div>

                    <!-- Addresses Section -->
                    <% if (addresses && addresses.length> 0) { %>
                        <div class="row">
                            <% addresses.forEach((address, index)=> { %>
                                <div class="col-md-6">
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="form-check">
