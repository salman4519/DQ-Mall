                <!-- Payment Method Container -->
                <div class="payment-methods mb-4 card p-4">
                    <h5>Select Payment Method</h5>

                    <!-- Cash on Delivery Option -->
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery"
                            value="cashOnDelivery" checked>
                        <label class="form-check-label" for="cashOnDelivery">Cash on Delivery</label>
                    </div>

                    <!-- Razorpay Option -->
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="razorpay"
                            value="razorpay">
                        <label class="form-check-label" for="razorpay">Online Payment (Razorpay)</label>
                    </div>
                </div>

                <!-- Product Details Container -->
                <div class="product-details card mb-4 p-4">
                    <h5>Product Summary</h5>
                    <% let cartTotal=0; %> <!-- Initialize cart total -->
                        <% cart.Products.forEach((product)=> { %>
                            <div class="card product-card mb-2">
                                <div class="card-body d-flex">
                                    <img src="/uploads/<%= product.ProductId.Images[0] %>"
                                        alt="<%= product.ProductId.Name %>" class="img-thumbnail me-3"
                                        style="width: 100px; height: auto;">
                                    <div class="flex-grow-1">
                                        <h5 class="card-title">
                                            <%= product.ProductId.Name %>
                                        </h5>
                                        <p class="mb-1">
                                            Price: $
                                            <span class="product-price">
                                                <% // Check if there's a discounted price available for the product let
                                                    productPrice=product.Price; const offer=offers.find(o=>
                                                    o.productId && product.ProductId &&
                                                    o.productId.equals(product.ProductId._id) && o.isActive
                                                    );

                                                    // If an offer exists, calculate the discounted price
                                                    if (offer) {
                                                    productPrice -= (productPrice * (offer.discountPercentage / 100));
                                                    }
                                                    // Display the appropriate prices based on the discount logic
                                                    if (productPrice < product.Price) { %>
                                                        <del>
                                                            <%= product.DiscountedPrice %>
                                                        </del>
                                                        <span class="text-success">
                                                            <%= product.DiscountedPrice.toFixed(2) %>
                                                        </span>
                                                        <% } else { %>
                                                            <%= product.DiscountedPrice.toFixed(2) %>
                                                                <% } %>
                                            </span>
                                        </p>
                                        <p class="card-text">Quantity: <span class="selected-quantity"
                                                data-product-id="<%= product.ProductId._id %>">Loading...</span></p>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                </div>
