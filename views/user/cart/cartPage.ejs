<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMIN5inwXcU5gl/j5D8Y3u73jH0whK86P9R6X" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://unpkg.com/sweetalert/dist/sweetalert.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <style>
        body {
            background-color: #f4f4f4;
        }

        .cart-container {
            display: flex;
            margin-top: 50px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            background-color: white;
        }

        .product-list {
            flex: 2;
            padding: 20px;
        }

        .product-item {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .product-item:hover {
            background-color: #f8f9fa;
        }

        .product-item img {
            width: 100px;
            height: auto;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-right: 15px;
            margin-top: 10px;
        }

        .summary {
            flex: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .cart-total {
            font-size: 1.75rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .remove-item {
            background-color: #dc3545;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .remove-item:hover {
            background-color: #c82333;
        }

        .btn-checkout {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn-checkout:hover {
            background-color: #0056b3;
        }

        .alert-warning {
            margin-top: 20px;
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
        }

        .breadcrumb {
            background-color: #7b838b;
            border-radius: 5px;
            padding: 10px 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .breadcrumb-item a {
            color: #007bff;
            text-decoration: none;
            margin-left: 20px;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        .navbar-nav .dropdown-item:hover {
            background-color: #f8f9fa;
        }

        .navbar-nav .nav-link i {
            font-size: 1.5rem;
            /* You can adjust this size */
        }

        .navbar-nav .nav-item {
            margin-right: 15px;
            /* Adjust this value for more or less space */
        }

        .navbar-brand-logo {
            height: 70px;
            margin-right: 50px;
            margin-left: 30px;
        }
    </style>

</head>

<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="/users/images/logo2.png" alt="Kenza Store Logo" class="navbar-brand-logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home"><i class="bi bi-house"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/shop"><i class="bi bi-shop"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/wishlist"><i class="bi bi-bag-heart"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart"><i class="bi bi-cart-dash"></i></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/profile">Profile</a></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Breadcrumbs -->
    <div aria-label="breadcrumb">
        <ol class="breadcrumb bg-light">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Your Cart</li>
        </ol>
    </div>

    <div class="container">
        <h2 class="text-center mb-4">Your Shopping Cart</h2>

        <% if (isEmpty) { %>
            <div class="alert alert-warning text-center" role="alert">
                Your cart is empty. Please add products to your cart.
            </div>
            <% } else { %>
                <div class="row">
                    <div class="col-md-8">
                        <div class="product-list">
                            <% cart.Products.forEach(product=> { %>
                                <div class="product-item d-flex mb-4" data-product-id="<%= product.ProductId._id %>">
                                    <img src="/uploads/<%= product.ProductId.Images[0] %>"
                                        alt="<%= product.ProductId.Name %>" class="img-thumbnail me-3"
                                        style="width: 100px;">
                                    <div class="flex-grow-1">
                                       <h5 class="font-weight-bold">
                                            <%= product.ProductId.Name %>
                                        </h5>
                                        <p class="mb-1">
                                            Price: $
                                            <span class="product-price">
                                                <% if (product.DiscountedPrice && product.DiscountedPrice <
                                                    product.Price) { %>
                                                    <del>
                                                        <%= product.Price.toFixed(2) %>
                                                    </del>
                                                    <span class="text-success">
                                                        <%= product.DiscountedPrice.toFixed(2) %>
                                                    </span>
                                                    <% } else { %>
                                                        <%= product.Price.toFixed(2) %>
                                                            <% } %>
                                            </span>
                                        </p>
                                        <p class="mb-1">Stock: <%= product.ProductId.Quantity %> left</p>
                                        <div class="d-flex align-items-center">
                                            <label for="quantity-<%= product.ProductId._id %>"
                                                class="me-2">Quantity:</label>
                                            <select id="quantity-<%= product.ProductId._id %>"
                                                class="form-control w-25 quantity-select"
                                                data-product-price="<%= product.Price %>"
                                                data-product-id="<%= product.ProductId._id %>">
                                                <% for (let i=1; i <=Math.min(product.ProductId.Quantity, 8); i++) { %>
                                                    <option value="<%= i %>" <%=i===product.Quantity ? 'selected' : ''
                                                        %>>
                                                        <%= i %>
                                                    </option>
                                                    <% } %>
                                            </select> 
                                            <button class="btn btn-danger btn-sm ml-auto remove-item"
                                                data-product-id="<%= product.ProductId._id %>">
                                                <i class="bi bi-trash3"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="summary">
                            <h4>Summary</h4>
                            <div class="cart-total">
                                Total: $<span id="cart-total">
                                    <%= cartTotal.toFixed(2) %>
                                </span>
                            </div>
                            <a href="/checkout" class="btn btn-checkout w-100 mt-3">Proceed to Checkout</a>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            const cartData = JSON.parse(localStorage.getItem('cart')) || {};
    
            // Update selected quantities from local storage
            $('.quantity-select').each(function () {
                const productId = $(this).data('product-id');
                const selectedQuantity = cartData[productId] || $(this).val();
                $(this).val(selectedQuantity);
                updateTotalPrice(); // Update total initially
            });
    
            // Change event for quantity selection
            $('.quantity-select').on('change', function () {
                const productId = $(this).data('product-id');
                const selectedQuantity = $(this).val();
                cartData[productId] = selectedQuantity;
                localStorage.setItem('cart', JSON.stringify(cartData));
                updateTotalPrice(); // Update total on quantity change
    
                // Optionally, make an AJAX call to update the server cart
                $.ajax({
                    type: 'POST',
                    url: '/cart/update', // Adjust this to your update endpoint
                    data: { productId, newQuantity: selectedQuantity },
                    success: function (response) {
                        $('#cart-total').text(response.cartTotal.toFixed(2)); // Update the total price displayed
                    },
                    error: function (error) {
                        swal("Error!", 'Failed to update cart on the server. Please try again.', "error");
                    }
                });
            });
    
            // Remove item button click event
            $('.remove-item').on('click', function () {
                const productId = $(this).data('product-id'); // Get the product ID from the button
    
                // Show confirmation alert with SweetAlert
                swal({
                    title: "Are you sure?",
                    text: "You want to remove this item from the cart?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                .then((willDelete) => {
                    if (willDelete) {
                        const cartData = JSON.parse(localStorage.getItem('cart')) || {};
    
                        // Remove the product from local storage
                        delete cartData[productId];
                        localStorage.setItem('cart', JSON.stringify(cartData));
    
                        // Make an AJAX request to delete the product from the database
                        $.ajax({
                            type: 'DELETE',
                            url: `/cart/${productId}`, // Adjust this URL to your delete endpoint
                            success: function (response) {
                                // Remove the product item from the UI
                                $(this).closest('.product-item').remove();
                                updateTotalPrice(); // Update the total price after deletion
                                swal("Success!", 'Item removed from cart!', "success"); // SweetAlert for success
                            }.bind(this), // Bind 'this' to maintain context
                            error: function (error) {
                                // Handle error, e.g., show an error message
                                swal("Error!", 'Failed to delete item. Please try again.', "error"); // SweetAlert for error
                            }
                        });
                    }
                });
            });
    
            // Function to update total price
            function updateTotalPrice() {
                let total = 0;
    
                $('.product-item').each(function () {
                    const productId = $(this).data('product-id');
                    const quantity = parseInt($(this).find('.quantity-select').val());
    
                    // Extract the original and discounted prices
                    const originalPriceText = $(this).find('.product-price ').text();
                    const discountedPriceText = $(this).find('.product-price span.text-success').text();
    
                    const originalPrice = parseFloat(originalPriceText) || 0; // Use 0 if NaN
                    const discountedPrice = parseFloat(discountedPriceText) || originalPrice; // Fallback to original if NaN
    
                    // Use the discounted price if it exists; otherwise, use the original price
                    const priceToUse = discountedPrice < originalPrice && discountedPrice > 0 ? discountedPrice : originalPrice;
                    total += priceToUse * quantity; // Calculate total
                });
    
                $('#cart-total').text(total.toFixed(2)); // Update the total price displayed
            }
        });
    </script>
    
    
</body>

</html>