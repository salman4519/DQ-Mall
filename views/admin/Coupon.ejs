                              <thead>
                                  <tr>
                                      <th>Coupon Code</th>
                                      <th>Discount (%)</th>
                                      <th>Max Discount ($)</th>
                                      <th>Min Purchase ($)</th>
                                      <th>Expiry Date</th>
                                      <th>Actions</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% coupons.forEach(coupon => { %>
                                      <tr>
                                          <!-- Display Coupon Code -->
                                          <td><%= coupon.couponCode || 'N/A' %></td>
                          
                                          <!-- Display Discount Percentage -->
                                          <td><%= coupon.discountPercentage || 'N/A' %></td>
                          
                                          <!-- Display Maximum Discount Amount -->
                                          <td>₹<%= coupon.maxDiscountAmount || 'N/A' %></td>
                          
                                          <!-- Display Minimum Purchase -->
                                          <td>₹<%= coupon.minPurchase || 'N/A' %></td>
                          
                                          <!-- Display Expiry Date -->
                                          <td><%= coupon.expiryDate ? new Date(coupon.expiryDate).toDateString() : 'N/A' %></td>
                          
                                          <!-- Actions -->
                                          <td>
                                              <% const isExpired = new Date(coupon.expiryDate) < new Date(); %>
                                              <% const isActive = coupon.isActive; %> 
                          
                                              <!-- Edit Button -->
                                              <a href="/admin/coupons/edit/<%= coupon._id %>" class="btn btn-outline-primary btn-sm">
                                                  Edit
                                              </a>
                          
                                              <!-- Status Check -->
                                              <% if (isExpired) { %>
                                                  <span class="text-danger">Expired</span>
                                              <% } else if (isActive) { %>
                                                  <form action="/admin/coupons/deactivate/<%= coupon._id %>" method="POST" style="display:inline;">
                                                      <button type="submit" class="btn btn-outline-secondary btn-sm deactivate-btn">Deactivate</button>
                                                  </form>
                                              <% } else { %>
                                                  <form action="/admin/coupons/activate/<%= coupon._id %>" method="POST" style="display:inline;">
                                                      <button type="submit" class="btn btn-outline-success btn-sm activate-btn">Activate</button>
                                                  </form>
                                              <% } %>
                          
                                              <!-- Delete Button -->
                                              <form action="/admin/coupons/delete/<%= coupon._id %>" method="POST" style="display:inline;" id="deleteForm" onsubmit="confirmDelete(event)">
                                                  <button type="submit" class="btn btn-outline-danger btn-sm" >Delete</button>
                                              </form>
                                          </td>
                                      </tr>
                                  <% }); %>
                              </tbody>
                          </table>
                          
                            
