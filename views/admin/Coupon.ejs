      <script>
        function confirmDelete(event) {
            event.preventDefault();
    
            // Show the SweetAlert confirmation with a black background
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to delete this coupon ",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'Cancel',
                customClass: {
                    popup: 'black-background'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show success message after confirmation
                    Swal.fire({
                        title: 'Deleted!',
                        text: 'Your coupon has been deleted.',
                        icon: 'success',
                        confirmButtonColor: '#3085d6',
                        customClass: {
                            popup: 'black-background'
                        }
                    }).then(() => {
                        // Proceed with the delete action (e.g., form submission)
                        document.getElementById('deleteForm').submit();
                    });
                }
            });
        }
    </script>
    <script>
      document.querySelectorAll('.activate-btn, .deactivate-btn').forEach(button => {
          button.addEventListener('click', function (event) {
              event.preventDefault(); // Prevent the default form submission
  
              const form = this.closest('form'); // Get the closest form
              const actionUrl = form.action; // Get the form action URL
              const actionType = this.textContent.trim(); // Get the button text (Activate/Deactivate)
  
              // Show SweetAlert confirmation
              Swal.fire({
                  title: 'Are you sure?',
                  text: `You want to ${actionType.toLowerCase()} this coupon?`,
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: `Yes, ${actionType.toLowerCase()} it!`,
                  cancelButtonText: 'Cancel',
                  customClass: {
                      popup: 'black-background'
                  }
              }).then((result) => {
                  if (result.isConfirmed) {
                      form.submit(); // Submit the form if confirmed
                  }
              });
          });
      });
  </script>
  
    

