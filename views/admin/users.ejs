      <!-- users table -->
      <div class="row">
        <div class="col-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Users</h4>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>S.No</th>
                      <th>username</th>
                      <th>email</th>
                      <th>Phone</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(users.length > 0 ) { %>
                      <% for (let i = 0; i < users.length; i++) { %>
                        <tr>
                          <td><%= i + 1 %></td>
                          <td><%= users[i].Username %></td>
                          <td><%= users[i].Email %></td>
                          <td><%= users[i].Mobile %></td>
                          <td>
                            <% if (users[i].Is_block) { %>
                              <form action="/admin/users/unblock/<%= users[i]._id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-outline-primary unblock-btn">Unblock</button>
                              </form>
                            <% } else { %>
                              <form action="/admin/users/block/<%= users[i]._id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-outline-danger block-btn">Block</button>
                              </form>
                            <% } %>
                          </td>
                        </tr>
                      <% } %>
                    <% } %>    
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- //padination -->
      <div class="pagination-container">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
      
      <script>
        document.querySelectorAll('.block-btn, .unblock-btn').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent the default form submission
    
                const form = this.closest('form'); // Get the closest form
                const actionUrl = form.action; // Get the form action URL
                const actionType = this.textContent.trim(); // Get the button text (Block/Unblock)
    
                // Show SweetAlert confirmation
                Swal.fire({
                    title: 'Are you sure?',
                    text: `You want to ${actionType.toLowerCase()} this user?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes, ${actionType.toLowerCase()} it!`,
                    cancelButtonText: 'Cancel',
                    customClass: {
                        popup: 'black-background'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // Submit the form if confirmed
                    }
                });
            });
        });
    </script>
    

