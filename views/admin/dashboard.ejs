        <p id="absentees-list">None</p>
    </div>

    <script>
        const attendanceForm = document.getElementById('attendance-form');
        const absenteesList = document.getElementById('absentees-list');

        attendanceForm.addEventListener('submit', function(event) {
            event.preventDefault();
            
            const formData = new FormData(attendanceForm);
            const students = document.querySelectorAll('input[name="student"]');
            const absentees = [];

            students.forEach(student => {
                if (!student.checked) {
                    absentees.push(student.value);
                }
            });

            absenteesList.textContent = absentees.length > 0 ? absentees.join(', ') : 'None';
        });
    </script>

