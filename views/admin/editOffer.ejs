                            <h4 class="card-title">Edit Offer</h4>
    
                            <form id="editOfferForm" action="/admin/offers/edit/<%= offer._id %>" method="post">
                                <!-- Offer Information -->
                                <div class="form-group">
                                    <label for="offerName">Offer Name</label>
                                    <input type="text" class="form-control" id="offerName" name="name" value="<%= offer.name %>" style="background-color: #333; color: white;" required>
                                    <p id="name-error" style="color: red; display: none;"></p>
                                </div>
    
                                <div class="form-group">
                                    <label for="discountPercentage">Discount Percentage</label>
                                    <input type="number" class="form-control" id="discountPercentage" name="discountPercentage" value="<%= offer.discountPercentage %>" style="background-color: #333; color: white;" required>
                                    <p id="discount-error" style="color: red; display: none;"></p>
                                </div>
    
                                <div class="form-group">
                                    <label for="applicableTo">Applicable To</label>
                                    <select class="form-control" id="applicableTo" name="applicableTo" onchange="toggleApplicableSections()" required>
                                        <option value="product" <%= offer.applicableTo === 'product' ? 'selected' : '' %>>Product</option>
                                        <option value="category" <%= offer.applicableTo === 'category' ? 'selected' : '' %>>Category</option>
                                    </select>
                                    <p id="applicableTo-error" style="color: red; display: none;"></p>
                                </div>
    
                                <div class="form-group" id="productIdSection" style="<%= offer.applicableTo === 'product' ? '' : 'display: none;' %>">
                                    <label for="productIds">Select Products</label>
                                    <% products.forEach(product => { %>
                                        <div>
                                            <input type="checkbox" id="product_<%= product._id %>" name="productIds[]" value="<%= product._id %>" <%= offer.productIds.includes(product._id.toString()) ? 'checked' : '' %>>
                                            <label for="product_<%= product._id %>"><%= product.Name %> ($<%= product.Price %>)</label>
                                        </div>
                                    <% }) %>
                                </div>
    
                                <div class="form-group" id="categoryIdSection" style="<%= offer.applicableTo === 'category' ? '' : 'display: none;' %>">
                                    <label for="categoryIds">Select Categories</label>
                                    <% categories.forEach(category => { %>
                                        <div>
                                            <input type="checkbox" id="category_<%= category._id %>" name="categoryIds[]" value="<%= category._id %>" <%= offer.categoryIds.includes(category._id.toString()) ? 'checked' : '' %>>
                                            <label for="category_<%= category._id %>"><%= category.name %></label>
                                        </div>
                                    <% }) %>
                                </div>
    
                                <div class="form-group">
                                    <label for="startTime">Start Time</label>
                                    <input type="datetime-local" class="form-control" id="startTime" name="startTime" value="<%= new Date(offer.startTime).toISOString().slice(0, 16) %>" style="background-color: #333; color: white;" required>
                                </div>
    
                                <div class="form-group">
                                    <label for="endTime">End Time</label>
                                    <input type="datetime-local" class="form-control" id="endTime" name="endTime" value="<%= new Date(offer.endTime).toISOString().slice(0, 16) %>" style="background-color: #333; color: white;" required>
                                </div>
    
                                <button type="submit" class="btn btn-success mr-2" id="submitButton">Update Offer</button>
                                <a href="/admin/offers" type="button" class="btn btn-dark">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
    function toggleApplicableSections() {
        const applicableTo = document.getElementById('applicableTo').value;
        const productIdSection = document.getElementById('productIdSection');
        const categoryIdSection = document.getElementById('categoryIdSection');
    
        if (applicableTo === 'product') {
            productIdSection.style.display = 'block';
            categoryIdSection.style.display = 'none';
        } else {
            productIdSection.style.display = 'none';
            categoryIdSection.style.display = 'block';
        }
    }
    </script>
    

